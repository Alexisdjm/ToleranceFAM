/* -------------------------------------------------------- general classes ------------------------------------------------------ */

.flex {
    display: flex;
}

.flex-center {
    display: flex;
    justify-content: center;
}

.flex-column {
    display: flex;
    flex-direction: column;
}

.align-center {
    align-items: center;
}

.flex-between {
    display: flex;
    justify-content: space-between;
}

.flex-evenly {
    display: flex;
    justify-content: space-evenly;
}

.flex-around {
    display: flex;
    justify-content: space-around;
}

.gap-5 {
    gap: 5px;
}

.gap-10 {
    gap: 10px;
}

.gap-15 {
    gap: 15px;
}

.gap-20 {
    gap: 20px;
}

.basic-aspect-ratio {
    aspect-ratio: 1/1;
}

.basic-section-container {
    width: 100%;
    height: fit-content;
    padding: 50px 0;
}

.grid-col-2 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
}

.grid-col-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
}

.grid-col-4 {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
}

.center {
    justify-content: center;
}

.space-between {
    justify-content: space-between;
}

.relative {
    position: relative;
}

.absolute {
    position: absolute;
}

.hundred-percent {
    width: 100%;
}

.hundred-vw {
    width: 100vw;
}

.centeer {
    justify-content: center;
}

.evenly {
    justify-content: space-evenly;
}

.around {
    justify-content: space-around;
}

.between {
    justify-content: space-between;
}

.text-center {
  text-align: center;
}

.fit-content {
  width: fit-content;
}

/* -------------------------------------------------- footer ---------------------------------------------------------------- */

.footer-block--mixed-flex {
    display: flex;
    gap: 10px;  
}

.footer-block--mixed-img-c h2 {
    font-size: 24px;
    font-weight: 400;
    line-height: 29px;
    letter-spacing: 0em;
    text-align: left;
}

.footer-block--mixed-text p {
    font-size: 16px;
    font-weight: 400;
    line-height: 26px;
    letter-spacing: 0em;
    text-align: left;
}

.footer-custom--blocks-container {
    padding: 100px 100px 5rem;
    margin: auto;
}

.footer-custom--linklist {
    width: 25%;
    max-width: 150px;
    margin: 0 60px;
}

.footer-custom--mixed {
    width: 30%;
    max-width: 375px;
    margin-right: 70px;
}

ul.list-unstyled.list-social {
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap: nowrap;
}

li.list-social__item.footer-custom--list {
  display: flex;
}

li.list-social__item.footer-custom--list > a {
  padding: 1.1rem 0.8rem !important;
}