/* -------------------------------------------------------- general classes ------------------------------------------------------ */

.flex {
    display: flex;
}

.flex-center {
    display: flex;
    justify-content: center;
}

.flex-column {
    display: flex;
    flex-direction: column;
}

.align-center {
    align-items: center;
}

.flex-between {
    display: flex;
    justify-content: space-between;
}

.flex-evenly {
    display: flex;
    justify-content: space-evenly;
}

.flex-around {
    display: flex;
    justify-content: space-around;
}

.gap-5 {
    gap: 5px;
}

.gap-10 {
    gap: 10px;
}

.gap-15 {
    gap: 15px;
}

.gap-20 {
    gap: 20px;
}

.basic-aspect-ratio {
    aspect-ratio: 1/1;
}

.basic-section-container {
    width: 100%;
    height: fit-content;
    padding: 50px 0;
}

.grid-col-2 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
}

.grid-col-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
}

.grid-col-4 {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
}

.center {
    justify-content: center;
}

.space-between {
    justify-content: space-between;
}

.relative {
    position: relative;
}

.absolute {
    position: absolute;
}

.hundred-percent {
    width: 100%;
}

.hundred-vw {
    width: 100vw;
}

.centeer {
    justify-content: center;
}

.evenly {
    justify-content: space-evenly;
}

.around {
    justify-content: space-around;
}

.between {
    justify-content: space-between;
}

.text-center {
  text-align: center;
}

.fit-content {
  width: fit-content;
}

