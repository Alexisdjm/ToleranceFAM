/* -------------------------------------------------------- general classes ------------------------------------------------------ */

.flex {
    display: flex;
}

.flex-center {
    display: flex;
    justify-content: center;
}

.flex-column {
    display: flex;
    flex-direction: column;
}

.align-center {
    align-items: center;
}

.flex-between {
    display: flex;
    justify-content: space-between;
}

.flex-evenly {
    display: flex;
    justify-content: space-evenly;
}

.flex-around {
    display: flex;
    justify-content: space-around;
}

.gap-5 {
    gap: 5px;
}

.gap-10 {
    gap: 10px;
}

.gap-15 {
    gap: 15px;
}

.gap-20 {
    gap: 20px;
}

.basic-aspect-ratio {
    aspect-ratio: 1/1;
}

.basic-section-container {
    width: 100%;
    height: fit-content;
    padding: 50px 0;
}

.grid-col-2 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
}

.grid-col-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
}

.grid-col-4 {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
}

.center {
    justify-content: center;
}

.space-between {
    justify-content: space-between;
}

.relative {
    position: relative;
}

.absolute {
    position: absolute;
}

.hundred-percent {
    width: 100%;
}

.hundred-vw {
    width: 100vw;
}

.centeer {
    justify-content: center;
}

.evenly {
    justify-content: space-evenly;
}

.around {
    justify-content: space-around;
}

.between {
    justify-content: space-between;
}

.text-center {
  text-align: center;
}

.fit-content {
  width: fit-content;
}

/* -------------------------------------------------- footer ---------------------------------------------------------------- */

.footer-block--mixed-flex {
    display: flex;
    gap: 10px;  
}

.footer-block--mixed-img-c h2 {
    font-size: 24px;
    font-weight: 400;
    line-height: 29px;
    letter-spacing: 0em;
    text-align: left;
}

.footer-block--mixed-text p {
    font-size: 16px;
    font-weight: 400;
    line-height: 26px;
    letter-spacing: 0em;
    text-align: left;
}

.footer-custom--blocks-container {
    padding: 100px 100px 5rem;
    margin: auto;
}

.footer-custom--linklist {
    width: 25%;
    max-width: 215px;
    margin: 0;
}

.footer-custom--mixed {
    width: 30%;
    max-width: 375px;
    min-width: 365px;
    margin-right: 70px;
}

ul.list-unstyled.list-social {
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap: nowrap;
}

li.list-social__item.footer-custom--list > a {
    gap: 5px;
    display: flex;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 0em;
    text-decoration: none;
    padding: 1.1rem 0.8rem !important;

}

li.list-social__item.footer-custom--list p {
    margin: 0;
}

.footer-custom--link-texts {
    color: white;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 0em;
    text-decoration: none !important;
    font-family: 'Plus Jakarta Sans', sans-serif !important;
}

.footer-custom--link-texts--active {
    font-weight: 500;
}

.footer-block__details-content.list-unstyled li {
    padding: 1.1rem 0.8rem!important;
}

.footer__copyright .copyright__content:first-child {
  font-size: 16px;
  font-weight: 400;
  text-align: left;
  line-height: 26px;
  letter-spacing: 0em;
  font-family: Monument Extended, sans-serif!important;
}

.footer__copyright .copyright__content:nth-child(2) {
  font-size: 16px;
  font-weight: 400;
  text-align: left;
  line-height: 26px;
  letter-spacing: 0em;
  font-family: 'Plus Jakarta Sans', sans-serif !important;
}

.footer-custom--block-name {
  text-transform: uppercase !important;
}

.footer__blocks-wrapper.grid.between {
  row-gap: 35px;
}

.countdown {
  overflow: hidden;
}

/* --------------------------------------------------- ig slider ------------------------------------------------------------- */

.custom-ig--slider {
  width: fit-content;
  display: flex;
  padding: 40px 0;
  overflow: hidden;
  transition: transform .5s;
}

.custom-ig--slide {
  position: relative;
  max-width: fit-content;
}

.custom-ig--slide svg {
  position: absolute;
  color: white;
  width: 20px;
  left: 85%;
  top: 5%;
}


/* --------------------------------------------------- media queries --------------------------------------------------------- */

@media only screen and (max-width: 463px) {
  .footer-custom--mixed {
      width: 100%;
      max-width: 100%;
      min-width: fit-content;
      margin: 0;
  }

  .footer-custom--blocks-container {
      padding: 100px 10px 5rem;
  }

  .footer-block--mixed-flex h2 {
      font-size: 22px;
  }
}

@media only screen and (min-width: 464px) and (max-width: 767px) {
    .footer-block--mixed-flex h2 {
        font-size: 28px;
    }
}

@media only screen and (max-width: 767px) {
    .footer-custom--mixed {
        width: 100%;
        max-width: 100%;
        margin: 0;
    }

    .footer-block--mixed-img {
        width: 150px;
    }
}

@media only screen and (min-width: 768px) and (max-width: 1023px) {
    .footer-custom--mixed {
        width: 100%;
        max-width: 100%;
        margin: 0;
    }

    .footer-block--mixed-img {
        width: 210px;
    }

    .footer-block--mixed-flex h2 {
        font-size: 52px;
    }

    .footer-block--mixed-text p {
        font-size: 20px;
    }
}


@media only screen and (max-width: 1023px) {
    .footer__blocks-wrapper.grid.between {
        flex-direction: column;
    }
}

@media only screen and (min-width: 768px) and (max-width: 1280px) {
    .footer-custom--blocks-container {
        padding: 100px 60px 5rem;
    }
}