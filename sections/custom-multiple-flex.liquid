<div class="new-flex--father" style="background-color: {{ section.settings.bg_color }};">
    <div class="new-flex--inner">
        <div class="new-flex-content-box">
            <h1>{{ section.settings.main_heading }}</h1>
            {{ section.settings.main_content }}
        </div>
        <div class="new-flex--flex-elements">
            <div class="new-flex--direct-elements-box">  
                <div class="main-flex-image--box">
                    <img 
                    src="{{ section.settings.main_image | img_url: "master" }}" 
                    alt="image" 
                    class="main-flex-image" 
                    loading="lazy">
                </div>
                <div class="{{ section.settings.blocks_layout }}">
                    {% for block in section.blocks %}
                        <div class="block-flex-container">
                            <img 
                            src="{{ block.settings.icon | img_url: "master" }}" 
                            alt="icon-{{ forloop.index0 }}" 
                            class="icon-flex-pic" 
                            loading="lazy">
                            <h3>{{ block.settings.heading }}</h3>
                            {{ block.settings.content }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Multiple flex",
        "class": "multiple-new-flex",
        "max_blocks": 4,
        "blocks": [
            {
                "type": "element",
                "name": "element",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "icon",
                        "label": "Icon"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading",
                        "default": "Heading"
                    },
                    {
                        "type": "richtext",
                        "id": "content", 
                        "label": "Content"
                    }
                ]
            }
        ],
        "settings": [
            {
                "type": "text",
                "id": "main_heading",
                "label": "main heading",
                "default": "Heading"
            },
            {
                "type": "richtext",
                "id": "main_content",
                "label": "Main content"
            },
            {
                "type": "image_picker",
                "id": "main_image",
                "label": "Main image"
            },
            {
                "type": "select",
                "id": "blocks_layout",
                "options": [
                    {
                        "value": "flex-blocks-align",
                        "label": "flex columns"
                    },
                    {
                        "value": "grid-blocks-align",
                        "label": "grid"
                    }
                ],
                "default": "grid-blocks-align",
                "label": "Blocks layout"
            },
            {
                "type": "color",
                "id": "bg_color",
                "default": "#F7F7F7",
                "label": "Background color"
            }
        ],
        "presets": [
            {
                "name": "Multiple flex"
            }
        ]

    }
{% endschema %}