<style>
.featured-collections__inner-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-column-gap: 10px;
        grid-row-gap: 10px;  
        padding:30px;
   
}
.featured-collections__title {
    height: 100%;
    position: relative;
    display: flex;
    margin: 0;
    justify-content: flex-end;
    flex-direction: column;
}
.featured-collections__inner-container .featured-collections__col:nth-child(1) { grid-area: 1 / 1 / 3 / 2;     max-width: 358px;
    height: 563.829px;}
.featured-collections__inner-container  .featured-collections__col:nth-child(2) { grid-area: 1 / 2 / 3 / 3;     max-width: 358px;
    height: 563.829px;}
.featured-collections__inner-container  .featured-collections__col:nth-child(3) { grid-area: 1 / 3 / 2 / 5; }
.featured-collections__inner-container  .featured-collections__col:nth-child(4) { grid-area: 2 / 3 / 3 / 5; }

.featured-collections__col {
    position:relative;

}
.featured-collections__img {
    position: absolute;
    object-fit: cover;
    height:100%;
    width: 100%;
}
.featured-collections__title {
    color: #FFF;
    font-family: 'Monument Extended', sans-serif !important;
    font-size: 32px;
    font-style: normal;
    margin-left: 50px;
    padding-bottom: 50px;
    font-weight: 400;
    line-height: normal;
    text-transform: uppercase;
}

</style>
<div class="featured-collections">
    <div class="featured-collections__inner-container">
        {% assign collections = section.settings.collection_list %}
        {% for collection in collections %}
            <div class="featured-collections__col">
             
                <img class="featured-collections__img"src="{{ collection.featured_image | img_url: 'master' }}" alt="{{ collection.title }}">
                <h3 class="featured-collections__title">{{ collection.title }}</h3>
            </div>
        {% endfor %}
    </div>

</div>

{% schema %}
{
  "name": "Featured Collections" ,
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collections",
        "limit": 4
    },      
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Featured Collections"
    }
  ]
}
{% endschema %}