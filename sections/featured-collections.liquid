<style>
.featured-collections__inner-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-column-gap: 10px;
        grid-row-gap: 10px;  
        padding:30px;
   
}
.featured-collections__title {
    height: 100%;
    position: relative;
    display: flex;
    margin: 0;
    justify-content: flex-end;
    flex-direction: column;
}
.featured-collections__inner-container .featured-collections__col:nth-child(1) { grid-area: 1 / 1 / 3 / 2;     max-width: 358px;
    height: 563.829px;}
.featured-collections__inner-container  .featured-collections__col:nth-child(2) { grid-area: 1 / 2 / 3 / 3;     max-width: 358px;
    height: 563.829px;}
.featured-collections__inner-container  .featured-collections__col:nth-child(3) { grid-area: 1 / 3 / 2 / 5; }
.featured-collections__inner-container  .featured-collections__col:nth-child(4) { grid-area: 2 / 3 / 3 / 5; }

.featured-collections__col {
    position:relative;

}
.featured-collections__img {
    position: absolute;
    object-fit: cover;
    height:100%;
    width: 100%;
}
.featured-collections__title {
    color: #FFF;
    font-family: 'Monument Extended', sans-serif !important;
    font-size: 32px;
    font-style: normal;
    margin-left: 50px;
    padding-bottom: 50px;
    font-weight: 400;
    line-height: normal;
    text-transform: uppercase;
}

</style>
<div class="featured-collections">
    <div class="featured-collections__inner-container">
        {% comment %} {% assign collections = section.settings.collection_list %} {% endcomment %}
        {% for block in section.blocks %}
            <a href="{{ block.settings.the_collection.url }}" class="featured-collections__col">
                <img class="featured-collections__img" {% if block.settings.custom_image == false %}
                  src="{{ block.settings.collection_image | img_url: 'master' }}"{% else %}
                  src="{{ block.settings.the_collection.featured_image | img_url: 'master' }}" 
                {% endif %}  alt="{{ block.settings.the_collection.title }}">
                <h3 class="featured-collections__title">{{ block.settings.the_collection.title }}</h3>
            </a>
        {% endfor %}
    </div>

</div>

{% schema %}
{
  "name": "Featured Collections" ,
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "name": "Collection",
      "type": "collection",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection custom image"
        },
        {
          "type": "collection",
          "id": "the_collection",
          "label": "Collection"
        },
        {
          "type": "checkbox",
          "id": "custom_image",
          "default": false,
          "label": "display the collection featured image?"
        }
      ]
    }
  ],
  "settings": [    
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Featured Collections"
    }
  ]
}
{% endschema %}