<style>

.section-padding-{{ section.settings.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
.image-hero__image{
    padding-top: 91px;
    padding-bottom: 91px;
}
.image-hero__title {
    margin:0;
    margin-bottom: 20px;
    color:  #FFF;
    text-align: center;
    font-family: 'Monument Extended', sans-serif !important;
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-transform: uppercase;
}
.image-hero__desc {
    color: #FFF;
    text-align: center;
    font-family: 'Plus Jakarta Sans', sans-serif ;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 26px;
    margin: 0;
    margin-bottom: 40px;
}
.image-hero__inner {
    max-width: 659px;
    margin: auto;
    text-align: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}
/* 162.5% */
</style>
<div class="image-hero section-padding-{{ section.settings.id }}">
    <div class="image-hero__image page-width" style="background-image: url({{ section.settings.image_with_text_image | img_url: 'master'}})">
        <div class="image-hero__inner">
        {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'heading' -%}
        <h2 class="image-hero__title">{{ block.settings.countdown__heading }} </h2>
                {%- when 'paragraph' -%}
        <p class="image-hero__desc">{{ block.settings.paragraph }}</p>
                {%- when 'button' -%}
        <a href="{{block.settings.button_link}}" class="button button--primary">{{block.settings.btn_label}}</a>
                 
            {%- endcase -%}
        {%- endfor -%}
    </div>
    </div>
</div>


{% schema %}
{
  "name": "Image hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "image_picker",
        "id": "image_with_text_image",
        "label": "Image"
    },      
    {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 54
    },
    {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 54
    }
  ],
  "blocks":[
    {
        "type": "heading",
        "name": "Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "countdown__heading",
            "label": "Heading"
          }
        ]
      },
      {
        "type": "paragraph",
        "name": "Sub heading",
        "limit": 1,
        "settings": [
          {
            "type": "textarea",
            "id": "paragraph",
            "label": "Sub heading"
          }
        ]
      },
      {
        "type": "button",
        "name": "Button",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "btn_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
          
        ]
      }

  ],
  "presets": [
    {
      "name": "Image hero",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "paragraph"
        },
        {
            "type":"button"
        }
      ]
    }
  ]
}
{% endschema %}
